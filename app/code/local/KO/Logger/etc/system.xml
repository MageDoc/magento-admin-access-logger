<?xml version="1.0" encoding="UTF-8"?>
<config>
     <tabs>
        <ko translate="label">
            <label>KO</label>
            <sort_order>0</sort_order>
        </ko>
    </tabs>
    <sections>
        <ko_logger_options translate="label" module="ko_logger">
            <class>separator-top</class>
            <label>Access log</label>
            <tab>ko</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Logging Access</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <clear_logs_frequency>
                            <label>Clear Logs Frequency (In minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>E.g. 2880 means records older than 2 days will be cleared.</comment>
                        </clear_logs_frequency>
                        <excluded_paths>
                            <label>Excluded Paths</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Separated by comman "," or whitespaces.</comment>
                            <depends><enabled>1</enabled></depends>
                        </excluded_paths>
                        <excluded_params>
                            <label>Excluded Parameters</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Separated by comman "," or whitespaces.</comment>
                            <depends><enabled>1</enabled></depends>
                        </excluded_params>
                    </fields>
                </general>
            </groups>
        </ko_logger_options>
    </sections>
</config>
